.row.registration_container
  .span6.offset3
    = simple_form_for(@affiliate, :url => affiliate_profiles_process_contact_data_path, :html => { class: "form-horizontal round_form", method: :put }) do |f|
      .form_title Datos de contacto
      = render '/shared/simple_form_errors', :f => f
      = f.input :address
      = f.input :country
      = f.input :state
      = f.input :city
      = f.input :zip_code
      = f.input :phone

      .form-actions
        = f.submit 'Guardar', :class => 'btn btn-primary btn-large'
        = link_to 'Cancelar', affiliate_profile_path, class: 'btn btn-large'
