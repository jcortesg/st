.row
  .span6.offset3
    .frontend_round_content
      .main_blue_title Datos de contacto

      %p= "Dirección: #{@affiliate.address}"
      %p= "País: #{@affiliate.country}"
      %p= "Provincia: #{@affiliate.state}"
      %p= "Ciudad: #{@affiliate.city}"
      %p= "Código Postal: #{@affiliate.zip_code}"
      %p= "Teléfono: #{@affiliate.phone}"

      .form-actions
        = link_to 'Editar', affiliate_profiles_edit_contact_data_path, :class => 'btn btn-primary btn-large'
        = link_to 'Volver', affiliate_profile_path, class: 'btn btn-large'
