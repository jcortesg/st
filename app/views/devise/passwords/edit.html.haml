.block#block-login
  %h2 Cambiar Contraseña
  .content.login
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form login" }, :method => :put) do |f|
      .group.wat-cf
        .left= f.label :password, :class => "label right"
        .right= f.password_field :password, :class => "text_field"
      .group.wat-cf
        .left= f.label :password_confirmation, :class => "label right"
        .right= f.password_field :password_confirmation, :class => "text_field"
      .group.wat-cf
        .left= f.label :current_password, :class => "label right"
        .right= f.password_field :current_password, :class => "text_field"
      .group.wat-cf
        .right
          %button.button{ :type => "submit" }
            = image_tag "theme/tick.png"
            Cambiar Contraseña 
      %p 
.sign-links
  = link_to "← Volver al sitio web", root_path, :class => "nounderline"
%br
