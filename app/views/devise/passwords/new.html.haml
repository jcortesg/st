.row.login_container
  .span6.offset3
    %h1.center_text Olvide mi contraseña
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-horizontal" }, :method => :post) do |f|
      = render '/shared/simple_form_errors', :f => f
      = f.input :email
      .form-actions
        = f.submit 'Resetear Contraseña'


.sign-links
  = link_to "← Volver al sitio web", root_path
  |
  = link_to "Iniciar sesión", new_session_path(resource_name)
  |
  = link_to "Registrarse", new_registration_path(resource_name)
%br
%br
