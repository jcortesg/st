.block#block-login
  %h2 Olvide mi contraseña
  .content.login
    .flash
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form" }, :method => :post) do |f|
      .group.wat-cf
        .left= f.label :email, :class => "label right"
        .right= f.text_field :email, :class => "text_field"  
      .group.wat-cf
        .right
          %button.button{ :type => "submit" }
            = image_tag "theme/tick.png"
            Resetear Contraseña 
.sign-links
  = link_to "← Volver al sitio web", root_path, :class => "nounderline"
  |
  = link_to "Iniciar sesión", new_session_path(resource_name), :class => "nounderline"
  |
  = link_to "Registrarse", new_registration_path(resource_name), :class => "nounderline"
