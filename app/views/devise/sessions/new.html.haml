.row.login_container
  .span6
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal round_form", :style => 'min-height: 300px' }) do |f|
      .form_title Inicia sesión con tu email
      = render '/shared/flash', :flash => flash
      = f.input :email
      = f.input :password
      = f.input :remember_me, :label => "Recordarme", :as => :boolean
      .form-actions
        = f.submit 'Ingresar', :class => 'btn btn-primary btn-large'

  .span6
    %div.round_form{:style => 'min-height: 300px'}
      .form_title Inicia sesión con Twitter
      %div{style: 'width: 100%;margin: 0 auto; text-align: center'}
        = link_to(image_tag('twitter.jpg', :style => 'display: inline'), '/auth/twitter')

.row
  .span6.offset3
    .sign-links.center_text{:style => 'margin-top: 30px'}
      = link_to "Registrarse", new_registration_path(resource_name)
      |
      = link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name)
