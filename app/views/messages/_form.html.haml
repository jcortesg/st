= form_for @message do |f|
  -if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :source_id
    = f.number_field :source_id
  .field
    = f.label :destination_id
    = f.number_field :destination_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :message_date
    = f.datetime_select :message_date
  .field
    = f.label :read
    = f.check_box :read
  .actions
    = f.submit 'Save'
