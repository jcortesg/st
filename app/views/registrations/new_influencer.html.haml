.row.registration_container.twitter_registration
  .span6.offset3
    .round_form
      %h1.center_text Registración de Celebridad

      - if session[:referrer_id]
        - referrer = User.where(id: session[:referrer_id]).first
        - if ['advertiser', 'influencer'].include? referrer.role
          .center_text
            = image_tag(referrer.influencer.twitter_image_url, style: 'display: inline')
            = "Fuiste invitado al sition por #{referrer.influencer.full_name}"

      %div.center_text
        = link_to(image_tag('sign-in-with-twitter.jpg', :style => 'display: inline'), '/twitter_credentials/login', :class => 'twitter_registration_link')

      %div.terms_and_conditions.center_text
        Al registrarse acepta los
        = link_to("Términos y Condiciones", terms_path)
        del servicio

      .sign-links.center_text
        = link_to "Iniciar sesión", new_session_path(resource_name)
        |
        = link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name)
