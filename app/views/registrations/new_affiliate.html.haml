.row.login_container
  .span6.offset3
    %h1.center_text Registración de Agencia
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f|
      = render '/shared/simple_form_errors', :f => f
      = hidden_field_tag :user_role, resource.role
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.simple_fields_for :affiliate do |a|
        = a.input :first_name
        = a.input :last_name
        = a.input :company
        = a.input :phone

      .form-actions
        = f.submit 'Registrarse'

.row
  .span6.offset3
    %p
      Al registrarse acepta los
      = link_to("Términos y Condiciónes", "/terms")
      del servicio

.sign-links
  = link_to "← Volver al sitio web", root_path
  |
  = link_to "Iniciar sesión", new_session_path(resource_name)
  |
  = link_to "Olvide mi contraseña?", new_password_path(resource_name)
%br
%br