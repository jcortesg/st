- if flash.any?
  .row
    .span8.offset2
      = render '/shared/flash', flash: flash

.row
  .span8.offset2.round_box
    = simple_form_for(@influencer, url: do_set_influence_admin_influencer_path(@influencer), method: :put, html:  { class: "form-horizontal round_form", method: :put }) do |f|
      %h1.form_title= "Configurar como referente a #{@influencer.full_name} (@#{@influencer.user.twitter_screen_name})"
      = render '/shared/simple_form_errors', :f => f
      %h2.title="Hobbies"
      .option
        = f.label :technology_influential, t('technology_referent')
        = f.check_box :technology_influential
      %hr
      .option
        = f.label :music_influential, t('music_referent')
        = f.check_box :music_influential
      %hr
      .option
        = f.label :movies_influential, t('movies_referent')
        = f.check_box :movies_influential
      %hr
      .option
        = f.label :luxury_influential, t('luxury_referent')
        = f.check_box :luxury_influential
      %hr
      .option
        = f.label :travel_influential, t('travel_referent')
        = f.check_box :travel_influential
      %hr
      .option
        = f.label :politics_influential, t('politics_referent')
        = f.check_box :politics_influential
      %hr
      .option
        = f.label :sports_influential, t('sports_referent')
        = f.check_box :sports_influential
      %hr
      .option
        = f.label :fashion_influential, t('fashion_referent')
        = f.check_box :fashion_influential
      %hr
      %h2.title="Edades"
      .option
        = f.label :moms_influential, t('moms_referent')
        = f.check_box :moms_influential
      %hr
      .option
        = f.label :teens_influential, t('teens_referent')
        = f.check_box :teens_influential
      %hr
      .option
        = f.label :college_influential, t('college_referent')
        = f.check_box :college_influential
      %hr
      .option
        = f.label :young_men_influential, t('young_men_referent')
        = f.check_box :young_men_influential
      %hr
      .option
        = f.label :young_women_influential, t('young_women_referent')
        = f.check_box :young_women_influential
      %hr
      .option
        = f.label :adult_men_influential, t('adult_men_referent')
        = f.check_box :adult_men_influential
      %hr
      .option
        = f.label :adult_women_influential, t('adult_women_referent')
        = f.check_box :adult_women_influential
      %hr

      .form-actions
        = f.submit t('save_influence'), :class => 'btn btn-danger btn-large', confirm: t('are_you_sure_short')
        = link_to t('cancel'), [:admin, @influencer], class: 'btn btn-large'
