- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash

.row
  .span12
    .round_box
      .content
        .right
          = link_to('Crear Fee', [:new, :admin, :transaction], :class => 'btn btn-primary')
          = link_to('Crear Pago', [:new_payment, :admin, :transactions], :class => 'btn btn-primary')
        %h1.title Transacciones

        %table.table.table-striped
          %thead
            %tr
              %th= sort_link(@search, :transaction_on, 'Fecha')
              %th Usuario
              %th= sort_link(@search, :borwin_transaction, "Borwin?")
              %th= sort_link(@search, :type, "Tipo")
              %th Link
              %th= sort_link(@search, :amount, "Importe")
              %th= sort_link(@search, :balance, "balance")
              %th Acciones

          %tbody
            - @transactions.each do |transaction|
              %tr{ :class => cycle('odd', 'even') }
                %td= localize(transaction.transaction_on, :format => "%d/%m/%Y")
                %td= transaction.user ? admin_link_to_user(transaction.user) : ''
                %td= transaction.borwin_transaction? ? 'SÃ­' : 'No'
                %td= transaction_type_description(transaction.transaction_type)
                %td= transaction.attachable.to_s if transaction.attachable
                %td= sprintf("%.02f", transaction.amount)
                %td= sprintf("%.02f", transaction.balance)
                %td
                  = link_to('Ver', [:admin, transaction], class: 'btn btn-primary')
        .center_text
          = paginate @transactions

        .filters
          .subtitle Filtros
          = simple_form_for @search, :url => [:admin, :transactions], html: {method: :get, id: 'filter_form', class: 'form-horizontal'} do |f|
            = f.input :user_id_equals, as: :select, collection: User.where('role in (?)', ['advertiser', 'influencer', 'affiliate']).all.collect {|u| [u.full_name, u.id]}, label: 'Usuario', required: :false
            = f.input :transaction_on_greater_than_or_equal_to, as: :date, label: 'Desde', required: false
            = f.input :transaction_on_less_than_or_equal_to, as: :date, label: 'Hasta', required: false
            = f.input :amount_greater_than, label: 'Importe mayor a', required: false
            = f.input :amount_less_than, label: 'Importe menor a', required: false
            .form-actions
              = f.submit 'Filtrar', :class => 'btn btn-primary'
              = link_to 'Resetear', '#', :class => 'btn reset'