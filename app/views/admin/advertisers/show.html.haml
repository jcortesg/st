- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash
.row
  .span12
    .round_box
      .content
        %h1.title= t('advertiser')
        %dl.record_details
          %dt= t('email')
          %dd= dl_value @advertiser.user.email
          %dt= t('name')
          %dd= dl_value @advertiser.first_name
          %dt= t('last_name')
          %dd= dl_value @advertiser.last_name
          %dt= t('position')
          %dd= dl_value @advertiser.position
          %dt= t('company')
          %dd= dl_value @advertiser.company
          %dt= t('web_site')
          %dd= dl_value @advertiser.web
          %dt= t('address')
          %dd= dl_value @advertiser.address
          %dt= t('city')
          %dd= dl_value @advertiser.city
          %dt= t('state')
          %dd= dl_value @advertiser.state
          %dt= t('country')
          %dd= dl_value @advertiser.country
          %dt= t('postal_code')
          %dd= dl_value @advertiser.zip_code
          %dt= t('telephone')
          %dd= dl_value @advertiser.phone
          %dt= t('how_you_know_borwin')
          %dd= dl_value @advertiser.advertising_source
          %dt= t('creation_date')
          %dd= dl_value @advertiser.created_at.try(:strftime, "%d/%m/%Y")
          %dt= t('update_date')
          %dd= dl_value @advertiser.updated_at.try(:strftime, "%d/%m/%Y")
          %dt= t('can_create_campaigns')
          %dd= @advertiser.can_create_campaigns? ? 'Sí' : 'No'
          %dt= t('can_create_tweets_by_click')
          %dd= @advertiser.can_create_click_fee ? 'Sí' : 'No'
      .clear.center_text.show_buttons
        = link_to(t('edit'), [:edit, :admin, @advertiser], class: 'btn btn-primary')
        = link_to(t('delete'), [:admin, @advertiser], method: :delete, class: 'btn btn-danger', confirm: t('are_you_sure'))
        = link_to(t('list'), [:admin, :advertisers], class: 'btn btn-primary')

