- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash
.row
  .span12
    .round_box
      .content
        %h1.title Keyword
        %dl.record_details
          %dt Nombre
          %dd= dl_value I18n.t("keywords.#{@keyword.name}")
          %dt Keywords
          %dd= dl_value @keyword.keywords
          %dt Fecha creación
          %dd= dl_value @keyword.created_at.try(:strftime, "%d/%m/%Y")
          %dt Fecha actualización
          %dd= dl_value @keyword.updated_at.try(:strftime, "%d/%m/%Y")
      .clear.center_text.show_buttons
        = link_to('Editar', [:edit, :admin, @keyword], class: 'btn btn-primary')
        = link_to('Listado', [:admin, :keywords], class: 'btn btn-primary')

