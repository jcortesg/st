.row.login_container
  .span12
    %h1.title Usuarios Pendientes de AprobaciÃ³n con Email Confirmado
    %table.table.table-bordered
      %thead
        %tr
          %th Email
          %th Tipo de Usuario
          %th Creado
          %th Acciones

      %tbody
        - @users.each do |user|
          %tr{ :class => cycle('odd', 'even') }
            %td= user.email
            %td= I18n.t("user.#{user.role}")
            %td= user.created_at ? (localize(user.created_at, :format => "%d/%m/%Y %H:%M hs")) : ""
            %td.last
              = form_for user, :url => user.approved? ? disapprove_admin_user_path(user) : approve_admin_user_path(user) do
                %button.button{ :type => "submit" }
                  = image_tag "theme/tick.png"
                  = user.approved ? "Desaprobar" : "Aprobar"

