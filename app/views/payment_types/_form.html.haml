= form_for @payment_type do |f|
  -if @payment_type.errors.any?
    #error_explanation
      %h2= "Se ha producido un error en #{pluralize(@payment_type.errors.count, "error")}"
      %ul
        - @payment_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Guardar'
