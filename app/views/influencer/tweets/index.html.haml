.row
  .span12
    .round_box
      .content.clearfix
        .title Tweets

        - if @search.count > 0
          %table.table.table-striped
            %thead
              %tr
                %th Empresa
                %th Campa√±a
                %th Tweet
                %th Estado
                %th Acciones
            %tbody
              - @tweets.each do |tweet|
                %tr{ class: cycle('odd', 'even') }
                  %td= tweet.campaign.advertiser.company
                  %td= tweet.campaign.name
                  %td= tweet.text
                  %td= influencer_tweet_status(tweet.status)
                  %td= link_to("Detalle", [:influencer, tweet], class: 'btn btn-primary')
          .center_text
            = paginate @tweets
        - else
          %h3 No posee tweets en el sistema.
