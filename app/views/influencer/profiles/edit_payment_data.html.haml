.row
  .span6.offset3
    = simple_form_for(@influencer, :url => influencer_profiles_process_payment_data_path, :html => { :class => "form-horizontal round_form" }) do |f|
      %h1.form_title Datos para cobros
      = render '/shared/simple_form_errors', :f => f
      = f.input :preferred_payment, :as => :select, collection: [t('check'), t('transfer')]
      = f.input :account_number
      = f.input :account_type, as: :select, collection: [t('saving_box'), t('runner_account')], include_blank: false
      = f.input :cbu
      = f.input :bank_name, as: :select, collection: bank_options

      .form-actions
        = f.submit t('save'), :class => 'btn btn-primary btn-large'
        = link_to t('cancel'), influencer_dashboard_path, class: 'btn btn-large'
