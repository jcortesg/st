- content_for :head do
  = javascript_include_tag 'user_profile'
- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash
.row
  .span9

    .profile_round_box
      .profile_resume_head
        %h1
          = @influencer.full_name
          %span= @influencer.influencer_type

        .price
          %span= "$#{@influencer.fixed_tweet_fee.to_f.round}"
          por tweet

      .profile_body
        .twitter_overview
          .overview_data
            %h2
              = link_to("@#{@influencer.user.twitter_screen_name}", "https://twitter.com/#!/#{@influencer.user.twitter_screen_name}")
              %span.edit_profile
                = link_to("Editar", influencer_profiles_edit_path, :class => 'btn btn-primary')
            %p
              %strong= "Bio:"
              = @influencer.twitter_bio
            %p
              %strong= "Último Tweet:"
              = @twitter_user.status.try(:text)
          .twitter_photo
            - if @influencer.photo.exists?
              = link_to(image_tag(@influencer.photo.url(:profile)), '#user_photo', 'data-toggle' => 'modal')
            - else
              = link_to(image_tag('no_photo.jpg'), '#user_photo', 'data-toggle' => 'modal')

      .profile_data.clearfix
        %ul.stats
          %li
            %h3 seguidores
            %p= @influencer.audience.followers
          %li
            %h3 amigos
            %p= @influencer.audience.friends
          %li
            %h3 tweets
            %p= @influencer.audience.tweets
          %li
            %h3 sexo
            %p= influencer_sex(@influencer.sex)
          %li
            %h3 ingreso Twitter
            %p= @influencer.twitter_joined.strftime("%d/%m/%y")
          %li
            %h3 años
            %p= influencer_age(@influencer.birthday)
          %li
            %h3 ingreso TweetGo
            %p= @influencer.user.created_at.strftime("%d/%m/%y")
          %li
            %h3 tweet fijo
            %p= number_to_currency(@influencer.fixed_tweet_fee)
          %li
            %h3 tweet combinado
            %p= number_to_currency(@influencer.combined_tweet_fee)
          %li
            %h3 CPC fijo
            %p= number_to_currency(@influencer.fixed_cpc_fee)
          %li
            %h3 CPC combinado
            %p= number_to_currency(@influencer.combined_cpc_fee)
          %li
            %h3 CPC medio
            %p= "-"
          %li
            %h3 CPC totales
            %p= "-"

      #user_photo.modal.hide.fade
        = simple_form_for @influencer, :url => influencer_profiles_update_photo_path do |f|
          .modal-header
            %button.close{'data-dismiss' => 'modal'} x
            %h3 Foto
          .modal-body
            .clearfix
              .image
                - if @influencer.photo.exists?
                  = image_tag(@influencer.photo.url(:profile))
                - else
                  = image_tag('no_photo.jpg')
              .form
                = f.input :photo
          .modal-footer
            %a.btn.close_user_photo{:href => '#'} Cerrar
            = f.submit 'Guardar', :class => 'btn btn-primary'


  .span3
    .round_box
      aca van los tweets del usuario

