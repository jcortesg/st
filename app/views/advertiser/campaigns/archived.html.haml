- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash

.row
  .span12
    .round_box
      .content
        %h1.title Campañas Historicas

        %table.table.table-striped
          %thead
            %tr
              %th= sort_link(@search, :name, 'Nombre')
              %th= sort_link(@search, :clicks, 'Clicks')
              %th= sort_link(@search, :cost, 'Costo')
              %th= sort_link(@search, :created_at, "Creado")
              %th Acciones

          %tbody
            - @campaigns.each do |campaign|
              %tr{ :class => cycle('odd', 'even') }
                %td= link_to(campaign.name, [:advertiser, @campaign])
                %td= link_to(campaign.clicks, "#")
                %td= campaign.cost
                %td= localize(campaign.created_at, :format => "%d/%m/%Y")
                %td
                  = link_to('Activar', [:restore, :influencer, campaign], method: :put, class: 'btn btn-danger', confirm: "Esta seguro que desea activar la campaña?" )
        .center_text
          = paginate @campaigns

