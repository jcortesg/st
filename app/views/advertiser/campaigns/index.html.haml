- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash

.row
  .span12
    .round_box
      .content
        - if current_user.advertiser.can_create_campaigns?
          .right
            = link_to('Crear Nueva Campaña', [:new, :advertiser, :campaign], :class => 'btn btn-primary')
        %h1.title Campañas

        %table.table.table-striped
          %thead
            %tr
              %th= sort_link(@search, :name, 'Nombre')
              %th= sort_link(@search, :clicks_count, 'Clicks')
              %th= sort_link(@search, :cost, 'Costo')
              %th= sort_link(@search, :created_at, "Creado")
              %th Acciones

          %tbody
            - @campaigns.each do |campaign|
              %tr{ :class => cycle('odd', 'even') }
                %td= link_to(campaign.name, [:advertiser, campaign])
                %td= link_to(campaign.clicks_count, "#")
                %td= campaign.cost
                %td= localize(campaign.created_at, :format => "%d/%m/%Y")
                %td
                  = link_to('Ver', [:advertiser, campaign], class: 'btn btn-primary')
                  = link_to('Audiencia', [:audience, :advertiser, campaign], class: 'btn btn-primary')
        .center_text
          = paginate @campaigns

