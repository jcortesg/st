  .span12
    .round_box
      .content

        %h1.title= t('influential_celebrities')

        %table.table.table-striped
          %thead
            %tr
              %th{style: 'width: 45px'} &nbsp;
              %th= t('celebrity')
              %th= t('clicks')
              %th= t('reach')

          %tbody
            - @campaign.influent_celebrities.reverse.each do |influencer|
              %tr{ :class => cycle('odd', 'even') }
