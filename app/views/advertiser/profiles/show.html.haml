- content_for :head do
  = javascript_include_tag 'http://widgets.twimg.com/j/2/widget.js'
  = javascript_include_tag 'user_profile'

- if flash.any?
  .row
    .span12
      = render '/shared/flash', flash: flash
.row
  .span9

    .profile_round_box
      .profile_resume_head
        %h1
          = @advertiser.full_name

      .profile_body
        .twitter_overview
          .overview_data.clearfix
            %h2
              = link_to("@#{@advertiser.user.twitter_screen_name}", "https://twitter.com/#!/#{@advertiser.user.twitter_screen_name}")
              %span.edit_profile
                = link_to("Editar Perfil", influencer_profiles_edit_path, :class => 'btn btn-primary')
            %p
              %strong= "Bio:"
              = @advertiser.twitter_bio
            %p
              %strong= "Ãšltimo Tweet:"
              = @twitter_user.status.try(:text) rescue ''
          .twitter_photo
            - if @advertiser.photo.exists?
              = link_to(image_tag(@advertiser.photo.url(:profile)), '#user_photo', 'data-toggle' => 'modal')
            - else
              = link_to(image_tag('no_photo.jpg'), '#user_photo', 'data-toggle' => 'modal')

      .profile_data.clearfix
        .influencer_stats
          .box_container.clearfix
            .box
              .stat Dato
              .data Valor
              .stat Dato
              .data Valor
              .stat Ingreso TweetGo:
              .data= @advertiser.user.created_at.strftime("%d/%m/%y")

            .box.last
              .stat Dato
              .data Valor

      #user_photo.modal.hide.fade
        = simple_form_for @advertiser, :url => influencer_profiles_update_photo_path do |f|
          .modal-header
            %button.close{'data-dismiss' => 'modal'} x
            %h3 Foto
          .modal-body
            .clearfix
              .image
                - if @advertiser.photo.exists?
                  = image_tag(@advertiser.photo.url(:profile))
                - else
                  = image_tag('no_photo.jpg')
              .form
                = f.input :photo
          .modal-footer
            %a.btn.close_user_photo{:href => '#'} Cerrar
            = f.submit 'Guardar', :class => 'btn btn-primary'


  .span3
    .profile_round_box
      :javascript
        new TWTR.Widget({
          version: 2,
          type: 'profile',
          rpp: 4,
          interval: 30000,
          width: 250,
          height: 300,
          theme: {
            shell: {
              background: '#1F91D0',
              color: '#ffffff'
            },
            tweets: {
              background: '#ffffff',
              color: '#6b6b6b',
              links: '#2f8dcc'
            }
          },
          features: {
            scrollbar: false,
            loop: false,
            live: false,
            behavior: 'all'
          }
        }).render().setUser('#{@advertiser.user.twitter_screen_name}').start();


