.block#block-login
  %h2 Registrarse
  .content.login
    .flash    
      - flash.each do |type, message|
        %div{ :class => "message #{type}" }
          %p= message
      - resource.errors.full_messages.each do |type, message|
        %div{ :class => "message alert" }
          %p= type.to_s + " " + message.to_s
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form" }) do |f|
      .group.wat-cf
        .left= f.label :email, :class => "label right"
        .right
          = f.text_field :email, :class => "text_field"
          %span{ :class => "description" } Obligatorio. E.j. info@borwin.com.ar
      .group.wat-cf
        .left= f.label :password, :class => "label right"
        .right
          = f.password_field :password, :class => "text_field"
          %span{ :class => "description" } Obligatorio. Debe ser mayor a 6 caracters
      .group.wat-cf
        .left= f.label :password_confirmation, :class => "label right"
        .right
          = f.password_field :password_confirmation, :class => "text_field"  
          %span{ :class => "description" } Obligatorio. Debe ser mayor a 6 caracters
      .group.wat-cf
        .left= f.label :user_type, :class => "label right"
        .right= f.select :user_type, :Celebridad => "influencer", :Anunciante => "advertiser", :Agencia => "affiliate"    
      .group.wat_cf
        .right
          %p
            Al registrarse acepta los
            = link_to("Términos y Condiciónes", "/terms")
            del servicio      
      .group.wat-cf
        .right
          %button.button{ :type => "submit" }
            = image_tag "theme/tick.png"
            Registrarse 
.sign-links
  = link_to "← Volver al sitio web", root_path, :class => "nounderline"
  |
  = link_to "Iniciar sesión", new_session_path(resource_name), :class => "nounderline"
  |
  = link_to "Olvide mi contraseña?", new_password_path(resource_name), :class => "nounderline"
